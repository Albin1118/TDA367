<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="235dp"
        android:layout_height="90dp"
        android:layout_marginEnd="88dp"
        android:layout_marginTop="272dp"
        android:text="Give the exercise your all and insert result below, if itÂ´s greater then the previous record, this will become the new"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/challengeDescriptionTextView"
        android:layout_width="216dp"
        android:layout_height="89dp"
        android:layout_marginEnd="96dp"
        android:layout_marginTop="12dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/challengeNameTextView" />

    <EditText
        android:id="@+id/challengeScoreEditText"
        android:layout_width="169dp"
        android:layout_height="74dp"
        android:layout_marginBottom="192dp"
        android:layout_marginStart="120dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/challengeNameTextView"
        android:layout_width="265dp"
        android:layout_height="36dp"
        android:layout_marginEnd="72dp"
        android:layout_marginTop="108dp"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/finishChallengeButton"
        android:layout_width="120dp"
        android:layout_height="48dp"
        android:layout_marginEnd="144dp"
        android:layout_marginTop="32dp"
        android:background="@android:color/holo_green_light"
        android:text="@string/challenge_finish"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/challengeScoreEditText" />


</android.support.constraint.ConstraintLayout>