<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="?attr/listPreferredItemHeight"
    android:paddingStart="?android:attr/listPreferredItemPaddingStart"
    android:paddingEnd="?android:attr/listPreferredItemPaddingEnd">

    <TextView
        android:id="@+id/exerciseNameTextView"
        android:layout_width="265dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/exercise_list_item_name"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/exerciseDescriptionTextView"
        android:layout_width="265dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/exerciseNameTextView"
        android:layout_alignStart="@id/exerciseNameTextView"
        android:text="@string/exercise_list_item_description"
        android:textAppearance="?attr/textAppearanceListItemSecondary"
        android:textSize="16sp" />

</RelativeLayout>