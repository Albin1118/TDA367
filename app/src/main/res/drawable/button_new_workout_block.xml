<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="10dp" />
            <stroke android:width="1dp" android:color="#36468b" />
            <gradient android:angle="-90" android:startColor="#36468b" android:endColor="#36468b"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="10dp" />
            <stroke android:width="1dp" android:color="#4052a4" />
            <gradient android:angle="-90" android:startColor="#7a9dff" android:endColor="#4154a7" />
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="10dp" />
            <stroke android:width="1dp" android:color="#36468b " />
            <gradient android:angle="-90" android:startColor="#6683ff" android:endColor="#36468b" />
        </shape>
    </item>
</selector>